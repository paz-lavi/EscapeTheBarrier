<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:keepScreenOn="true"
    tools:context=".GameOver">

    <TextView
        android:id="@+id/gameover_LBL_mag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="GAME OVER"
        android:textColor="@color/textColor"
        android:textSize="50sp"

        />

    <TextView
        android:id="@+id/gameover_LBL_scoremsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameover_LBL_mag"
        android:layout_centerHorizontal="true"
        android:text="Your Score Is:"
        android:textColor="@color/textColor"
        android:textSize="36sp"

        />

    <TextView
        android:id="@+id/gameover_LBL_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameover_LBL_scoremsg"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/textColor"
        android:textSize="36sp"

        />

    <Button
        android:id="@+id/gameover_BT_pa"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/gameover_BT_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/textColor"
        android:text="Play Again"
        android:textColor="@color/backgroundColor"
        android:textSize="36sp" />

    <Button
        android:id="@+id/gameover_BT_menu"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/textColor"
        android:text="Menu"
        android:textColor="@color/backgroundColor"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/gameover_LBL_newrecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gameover_LBL_score"
        android:textSize="50sp"
        android:text="New Record"
        android:textColor="@color/textColor" />


    <EditText
        android:id="@+id/gameover_EDT_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="name"
        android:textSize="36sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/textColor"
        android:layout_below="@id/gameover_LBL_newrecord" />

    <Button
        android:id="@+id/gameover_BT_save"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/textColor"
        android:text="save"
        android:layout_below="@id/gameover_EDT_name"
        android:textColor="@color/backgroundColor"
        android:textSize="36sp" />

</RelativeLayout>